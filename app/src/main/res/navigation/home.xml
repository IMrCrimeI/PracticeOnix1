<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.onix.internship.ui.splash.SplashFragment"
        android:label="SplashFragment" />
    <fragment
        android:id="@+id/translateFragment"
        android:name="com.onix.internship.ui.translate.TranslateFragment"
        android:label="TranslateFragment" >
        <action
            android:id="@+id/action_translateFragment_to_translationsListFragment"
            app:destination="@id/translationsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/translationsListFragment"
        android:name="com.onix.internship.ui.translationsList.TranslationsListFragment"
        android:label="TranslationsListFragment" />

</navigation>