<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.onix.internship.ui.splash.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_ageVerification"
            app:destination="@id/ageVerification"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_bottomNavigation"
            app:destination="@id/bottomNavigation"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/skillVerification"
        android:name="com.onix.internship.ui.firstSetting.skill.SkillVerification"
        android:label="SkillVerification"
        tools:layout="@layout/skill_verification_fragment">
        <action
            android:id="@+id/action_skillVerification_to_roleVerification"
            app:destination="@id/roleVerification" />
    </fragment>
    <fragment
        android:id="@+id/ageVerification"
        android:name="com.onix.internship.ui.firstSetting.age.AgeVerification"
        android:label="AgeVerification"
        tools:layout="@layout/age_verification_fragment">
        <action
            android:id="@+id/action_ageVerification_to_skillVerification"
            app:destination="@id/skillVerification" />
    </fragment>
    <fragment
        android:id="@+id/roleVerification"
        android:name="com.onix.internship.ui.firstSetting.role.RoleVerification"
        android:label="RoleVerification">
        <action
            android:id="@+id/action_roleVerification_to_bottomNavigation"
            app:destination="@id/bottomNavigation" />
    </fragment>
    <fragment
        android:id="@+id/bottomNavigation"
        android:name="com.onix.internship.ui.bottomNavigation.MainMenuScreen"
        android:label="BottomNavigation" />

</navigation>