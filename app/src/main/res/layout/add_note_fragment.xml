<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="notesColor"
            type="com.onix.internship.data.NotesColor" />
        <variable
            name="viewModel"
            type="com.onix.internship.ui.notesList.addNotes.AddNoteFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/add_fragment_title_input_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:autofillHints="phone"
            android:backgroundTint="@color/vista_blue"
            android:gravity="start"
            android:hint="@string/enter_title"
            android:inputType="text"
            android:text="@={viewModel.model.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/add_fragment_content_input_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:autofillHints="phone"
            android:backgroundTint="@color/vista_blue"
            android:gravity="start"
            android:hint="@string/enter_content"
            android:inputType="text"
            android:text="@={viewModel.model.contents}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_fragment_title_input_text" />

        <TextView
            android:id="@+id/add_fragment_choice_color_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="@string/choice_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_fragment_content_input_text" />


        <TextView
            android:id="@+id/add_fragment_choice_color_red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:background="@color/color_text_red"
            android:onClick="@{_ -> viewModel.selectColor(notesColor.RED)}"
            android:foreground="@{(viewModel.model.Color == notesColor.RED) ? @drawable/bg_view_color : null}"
            app:layout_constraintBottom_toBottomOf="@+id/add_fragment_material_divider"
            app:layout_constraintEnd_toStartOf="@+id/add_fragment_choice_color_yellow"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/add_fragment_choice_color_yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:background="@color/color_text_yellow"
            android:onClick="@{_ -> viewModel.selectColor(notesColor.YELLOW)}"
            android:foreground="@{(viewModel.model.Color == notesColor.YELLOW) ? @drawable/bg_view_color : null}"
            app:layout_constraintBottom_toBottomOf="@+id/add_fragment_material_divider"
            app:layout_constraintEnd_toStartOf="@id/add_fragment_choice_color_green"
            app:layout_constraintStart_toEndOf="@id/add_fragment_choice_color_red" />

        <View
            android:id="@+id/add_fragment_choice_color_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:onClick="@{_ -> viewModel.selectColor(notesColor.GREEN)}"
            android:foreground="@{(viewModel.model.Color == notesColor.GREEN) ? @drawable/bg_view_color : null}"
            android:background="@color/color_text_green"
            app:layout_constraintBottom_toBottomOf="@+id/add_fragment_material_divider"
            app:layout_constraintEnd_toStartOf="@id/add_fragment_choice_color_violet"
            app:layout_constraintStart_toEndOf="@id/add_fragment_choice_color_yellow" />

        <View
            android:id="@+id/add_fragment_choice_color_violet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:onClick="@{_ -> viewModel.selectColor(notesColor.PURPLE)}"
            android:foreground="@{(viewModel.model.Color == notesColor.PURPLE) ? @drawable/bg_view_color : null}"
            android:background="@color/color_text_violet"
            app:layout_constraintBottom_toBottomOf="@+id/add_fragment_material_divider"
            app:layout_constraintEnd_toStartOf="@id/add_fragment_choice_color_dark_blue"
            app:layout_constraintStart_toEndOf="@id/add_fragment_choice_color_green" />

        <View
            android:id="@+id/add_fragment_choice_color_dark_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:onClick="@{_ -> viewModel.selectColor(notesColor.DARK_BLUE)}"
            android:foreground="@{(viewModel.model.Color == notesColor.DARK_BLUE) ? @drawable/bg_view_color : null}"
            android:background="@color/color_text_dark_blue"
            app:layout_constraintBottom_toBottomOf="@+id/add_fragment_material_divider"
            app:layout_constraintEnd_toStartOf="@id/add_fragment_choice_color_light_blue"
            app:layout_constraintStart_toEndOf="@id/add_fragment_choice_color_violet" />

        <View
            android:id="@+id/add_fragment_choice_color_light_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_6dp"
            android:onClick="@{_ -> viewModel.selectColor(notesColor.LIGHT_BLUE)}"
            android:foreground="@{(viewModel.model.Color == notesColor.LIGHT_BLUE) ? @drawable/bg_view_color : null}"
            android:background="@color/color_text_light_blue"
            app:layout_constraintBottom_toBottomOf="@+id/add_fragment_material_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/add_fragment_choice_color_dark_blue" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/add_fragment_material_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_18dp"
            android:layout_marginTop="56dp"
            app:dividerColor="@color/vista_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_fragment_choice_color_text" />

        <CheckBox
            android:id="@+id/add_fragment_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:checked="@={viewModel.model.editable}"
            android:text="@string/edit_is_enabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_fragment_material_divider" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/add_fragment_material_divider_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_18dp"
            android:layout_marginTop="@dimen/margin_16dp"
            app:dividerColor="@color/vista_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_fragment_check_box" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{_ -> viewModel.createNote()}"
            android:text="@string/add_note"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_fragment_material_divider_check_box" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>