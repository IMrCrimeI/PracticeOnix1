<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="notes"
            type="com.onix.internship.data.room.NotesItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="1dp"
        android:background="@drawable/bg_layout"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notes_item_title"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="14dp"
            android:gravity="fill_vertical"
            android:text="@{notes.notesTitle}"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/notes_icon_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notes_icon_state"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="14dp"
            android:src="@{notes.notesCondition ? @drawable/ic_up : @drawable/ic_down}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/description_container"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="@{notes.notesCondition ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notes_item_title">

            <TextView
                android:id="@+id/contentText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="14dp"
                android:text="@{notes.notesContents}"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/edit_icon"
                android:layout_width="32dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_height="32dp"
                android:visibility="@{notes.notesEdit ? View.VISIBLE : View.GONE}"
                android:layout_marginBottom="@dimen/margin_6dp"
                app:layout_constraintBottom_toBottomOf="@+id/contentText"
                app:layout_constraintEnd_toEndOf="@+id/contentText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>