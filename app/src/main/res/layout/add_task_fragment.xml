<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="states"
            type="com.onix.internship.data.DataAndTimeStates" />

        <variable
            name="viewModel"
            type="com.onix.internship.ui.addTask.AddTaskViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/backCardView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> viewModel.goToDocumentTab()}"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toTopOf="@+id/titleTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_new"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/addText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_task"
            android:textColor="#10275A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/titleTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/hex_medium"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintTextColor="@color/hex_medium"
            app:layout_constraintBottom_toTopOf="@+id/dataTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/tittle"
                android:textColor="@color/hex_black"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/DataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/data"
            android:textColor="@color/hex_medium"
            app:layout_constraintBottom_toTopOf="@+id/dataTextInput"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageCalendar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="@id/dataTextInput"
            app:layout_constraintEnd_toEndOf="@id/dataTextInput"
            app:layout_constraintTop_toTopOf="@+id/dataTextInput"
            app:tint="@color/hex_calendar" />

        <TextView
            android:id="@+id/dataTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="32dp"
            android:gravity="fill_vertical"
            android:hint="@string/enter_data"
            android:onClick="@{() -> viewModel.selectDataOrTime(states.DATA)}"
            android:text="@{viewModel.appSettings.date}"
            android:textColor="@color/hex_black"
            android:textColorHint="@color/hex_lite"
            app:layout_constraintBottom_toTopOf="@+id/fromTimeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextInput" />


        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/time"
            android:textColor="@color/hex_medium"
            app:layout_constraintBottom_toTopOf="@+id/fromTimeText"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fromTimeText"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:hint="@string/enter_from_time"
            android:onClick="@{() -> viewModel.selectDataOrTime(states.FROM_TIME)}"
            android:text="@{viewModel.appSettings.fromTime}"
            android:textColor="@color/hex"
            android:textColorHint="@color/hex_lite"
            app:layout_constraintBottom_toTopOf="@+id/descriptionTextInput"
            app:layout_constraintEnd_toStartOf="@+id/toTimeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dataTextInput" />

        <TextView
            android:id="@+id/toTimeText"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:hint="@string/enter_to_time"
            android:onClick="@{() -> viewModel.selectDataOrTime(states.TO_TIME)}"
            android:text="@{viewModel.appSettings.toTime}"
            android:textColor="@color/hex"
            android:textColorHint="@color/hex_lite"
            app:layout_constraintBottom_toTopOf="@+id/descriptionTextInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fromTimeText"
            app:layout_constraintTop_toBottomOf="@+id/dataTextInput" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionTextInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColorHint="@color/hex_medium"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintTextColor="@color/hex_medium"
            app:layout_constraintBottom_toTopOf="@+id/typeRadioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fromTimeText">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/description"
                android:textColor="@color/hex_black"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/popUpMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:padding="12dp"
            android:onClick="@{() -> viewModel.openPopUpMenu()}"
            android:src="@drawable/pop_up"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionTextInput"
            app:layout_constraintEnd_toEndOf="@+id/descriptionTextInput"
            app:layout_constraintTop_toTopOf="@+id/descriptionTextInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/type"
            android:textColor="@color/hex_medium"
            app:layout_constraintBottom_toTopOf="@+id/typeRadioGroup"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/typeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/tagsRecycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextInput">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/hex"
                android:text="@string/personal"
                android:textColor="@color/hex_black"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/hex"
                android:text="@string/privat"
                android:textColor="@color/hex_black"
                android:textSize="16sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/hex"
                android:text="@string/secret"
                android:textColor="@color/hex_black"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/tagsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="22dp"
            android:text="@string/tags"
            android:textColor="@color/hex_medium"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/tagsRecycler"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagsRecycler"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginHorizontal="18dp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/addTaskButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeRadioGroup"
            tools:itemCount="7" />

        <TextView
            android:id="@+id/addTagButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_new_tag"
            android:onClick="@{() -> viewModel.addTags()}"
            android:textColorHint="@color/hex_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tagsRecycler" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addTaskButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/round_style"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tagsRecycler" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>